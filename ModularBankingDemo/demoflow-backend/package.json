{
  "name": "demoflow-backend",
  "version": "1.0.0",
  "description": "Backend server for DemoFlow headless_v3 functionality",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "npm run start:dev",
    "start:dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern='(eventHubService|sessionManager).test.js'",
    "test:integration": "jest --testPathPattern='(headlessV3|integration).test.js'",
    "test:eventhub": "jest --testPathPattern='eventHubService.test.js'",
    "test:session": "jest --testPathPattern='sessionManager.test.js'",
    "test:api": "jest --testPathPattern='headlessV3.test.js'",
    "test:frontend-backend": "jest --testPathPattern='integration.test.js'",
    "test:verbose": "jest --verbose",
    "test:silent": "jest --silent"
  },
  "keywords": [
    "demoflow",
    "headless",
    "banking",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "kafkajs": "^2.2.4",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "eventsource": "^4.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
